<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tumelomaremane.football_competition_json.MainActivity">
    />

    <TableLayout
        android:id="@+id/mainact"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:paddingTop="2dp"
        android:paddingBottom="20dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:orientation="vertical"
        android:weightSum="4">

        <TextView
            android:id="@+id/home_team_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="HT Name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/away_team_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="AT Name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="Date"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="Status"
            android:textStyle="bold" />

    </TableRow>
   </TableLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/fixture_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        tools:listitem="@layout/fixture_card"
        android:scrollHorizontally="false"/>


</android.support.constraint.ConstraintLayout>
